<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDocumento"
            style="@android:style/TextAppearance.Material.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOCUMENTO"
            android:textAlignment="center"
            android:textColor="@color/colorDate"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCantidad"
                style="@android:style/TextAppearance.Material.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/colorBlue"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tvCantidadNS"
                style="@android:style/TextAppearance.Material.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_cloud_arrow_up"
                android:drawableTint="@color/colorend_splash"
                android:paddingEnd="5dp"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorend_splash"
                android:textSize="30sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTotal"
            style="@android:style/TextAppearance.Material.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: $0.00"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btnNewDocument"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/bg_btn_login"
            android:text="Nuevo"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>