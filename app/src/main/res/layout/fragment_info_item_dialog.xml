<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--ENCABEZADO-->
        <LinearLayout android:id="@+id/lyEncabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8"
            android:background="@color/colorSincronizado">
            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.4"
                android:text="NOMBRE PRODUCTO"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:paddingLeft="4dp"
                android:drawableLeft="@drawable/ic_info"
                android:drawableTint="@color/colorBlue"
                android:drawablePadding="5dp"/>
            <ProgressBar
                android:id="@+id/pbCargando"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.3"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/btnCerrar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/ic_close"
                android:background="@null"/>
        </LinearLayout>

        <!--CUERPO ITEM-->
        <LinearLayout android:id="@+id/lyProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView android:id="@+id/txtInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>